@model TicketStore.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Login/design/designLogin.css" />
    <link rel="stylesheet" type="text/javascript" href="~/Login/design/designLogin.js" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
</head>
<body>
   
    <div class="container">
        <form class="signUp">
            <h3>Welcome to Ticket-Store</h3>
            <button class="form-btn sx" id="log-in" type="button">Log In</button>
            <button class="form-btn dx" type="submit" asp-controller="Users" asp-action="Create">Sign Up</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-success" role="button" >Home</a>
            <img src="~/img/check.png" style="height:230px" />
        </form>
        <form class="signIn" asp-action="Login" asp-controller="users" asp-route-returnurl='@Context.Request.Query["ReturnUrl"]' method="post">
            <h3>Welcome <br />Back !</h3>
            <button class="fb" type="button">Log In With Facebook</button>
            <p>- or -</p>
            <label asp-for="Email" clas="control-label"></label>
            <input asp-for="Email" type="email" placeholder="Insert eMail" autocomplete="off" reqired />
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" placeholder="Insert Password" reqired />
            <button class="form-btn sx back" id="back" type="button">Back</button>
            <button class="form-btn dx" id="log-in" type="submit" value="Login">Log In</button>
            <a asp-controller="Home" asp-action="Index">Home</a>
        </form>




        <script>
            $("#log-in").click(function () {
                $(".signIn").addClass("active-dx");
                $(".signUp").addClass("inactive-sx");
                $(".signUp").removeClass("active-sx");
                $(".signIn").removeClass("inactive-dx");
            });

            $("#back").click(function () {
                $(".signUp").addClass("active-sx");
                $(".signIn").addClass("inactive-dx");
                $(".signIn").removeClass("active-dx");
                $(".signUp").removeClass("inactive-sx");
            });
        </script>
    </div>

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}